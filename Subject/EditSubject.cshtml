@model StudentApp.subject

@{
    ViewBag.Title = "EditSubject";
}

<h2>EditSubject</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>subject</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SubjectId)

        <div class="form-group">
            @Html.LabelFor(model => model.Subjects, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Subjects)
                @Html.ValidationMessageFor(model => model.Subjects)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Subjects")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
